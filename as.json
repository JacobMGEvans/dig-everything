{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "composite": true,
    "isolatedModules": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
